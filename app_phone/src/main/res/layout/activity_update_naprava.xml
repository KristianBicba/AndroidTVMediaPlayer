<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <EditText
            android:id="@+id/id_naprava_update"
            android:layout_width="265dp"
            android:layout_height="50dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Device ID"
            app:layout_constraintBottom_toTopOf="@+id/name_naprava_update"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <EditText
            android:id="@+id/name_naprava_update"
            android:layout_width="265dp"
            android:layout_height="50dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Device name"
            app:layout_constraintBottom_toTopOf="@+id/info_naprava_update2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_naprava_update" />

        <EditText
            android:id="@+id/info_naprava_update2"
            android:layout_width="265dp"
            android:layout_height="50dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Device IP"
            app:layout_constraintBottom_toTopOf="@+id/update_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_naprava_update" />

        <Button
            android:id="@+id/update_button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/cardview_dark_background"
            android:fontFamily="@font/poppins_semibold"
            android:text="update"
            app:layout_constraintBottom_toTopOf="@+id/delete_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_naprava_update2" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/cardview_dark_background"
            android:fontFamily="@font/poppins_semibold"
            android:text="delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/update_button" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Edit device information"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/id_naprava_update"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>